<div class="main-content">
    <h1>Matchmaker</h1>
    <%= form_for :run, url: course_overview_index_path do |form| %>
        <%= form.submit "Run Matchmaker", :class=>"fade-btn top-border" %>
    <% end %>
    <% if @entries %>
        <table class="borderless">
            <tr>
                <th>Course</th>
                <th>Status</th>
                <th>Applicant</th>
            </tr>
            <% @entries.each do |course, emails| %>
                <% @cur_status = emails.length%6 %>
                <% if @cur_status < 2 %>
                    <% @status = 'red' %>
                <% elsif @cur_status < 4 %>
                    <% @status = 'yellow' %>
                <% else %>
                    <% @status = 'green' %>
                <% end %>
                <tr>
                    <td><%= course %></td>
                    <td style="text-align:center" class="<%= @status %>"><%= emails.length%6 %> / 4</td>
                    <td><%= emails[0] %></td>
                    <% (1..emails.length-1).each do |i| %>
                        <tr>
                            <td></td><td></td>
                            <td><%= emails[i] %></td>
                        </tr>
                    <% end %>
                </tr>
            <% end %>
        </table>
    <% else %>
        <p class="faint">No entries</p>
    <% end %>
</div>
